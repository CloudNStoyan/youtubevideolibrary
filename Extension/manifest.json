{
  "name": "Youtuber Video Saver",
  "version": "1.0",
  "description": "Extension for saving your favorite videos",
  "permissions": [
					"activeTab",
					"declarativeContent",
					"storage",
					"https://*/*",
					"http://*/*",
					"tabs"
				],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/youtube_saver16.png",
      "32": "images/youtube_saver32.png",
      "48": "images/youtube_saver48.png",
      "128": "images/youtube_saver128.png"
    }
  },
  "icons": {
    "16": "images/youtube_saver16.png",
    "32": "images/youtube_saver32.png",
    "48": "images/youtube_saver48.png",
    "128": "images/youtube_saver128.png"
  },
  "manifest_version": 2
}
